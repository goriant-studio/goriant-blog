---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog-vi"))
  .filter((p) => !p.data.draft && p.data.date)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const getSlug = (post) =>
  post.id.split("/").pop().replace(/\.(md|mdx)$/, "");
---

<BaseLayout lang="vi">
  <main class="mx-auto max-w-6xl px-6 pt-40 pb-24">
    <header class="mb-10">
      <h1 class="text-3xl sm:text-4xl font-extrabold text-white">
        Nhật ký phát triển
      </h1>
      <p class="mt-3 text-white/70 max-w-2xl">
        Ghi lại quá trình làm game (Godot), các thử nghiệm, quyết định thiết kế và bài học.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2">
      {posts.map((post) => {
        const slug = getSlug(post);

        return (
          <a
            href={`/vi/blog/${slug}`}
            class="rounded-xl bg-white/5 backdrop-blur border border-white/10
                   p-6 transition hover:bg-white/10"
          >
            <p class="text-xs text-white/50">
              {post.data.date.toLocaleDateString("vi-VN")}
            </p>

            <h2 class="mt-2 text-lg font-semibold text-white">
              {post.data.title}
            </h2>

            {post.data.description && (
              <p class="mt-2 text-sm text-white/70">
                {post.data.description}
              </p>
            )}

            <div class="mt-4 flex flex-wrap gap-2">
              {(post.data.tags ?? []).map((tag) => (
                <span class="text-xs rounded-full bg-white/10 border border-white/10 px-2 py-1 text-white/70">
                  #{tag}
                </span>
              ))}
            </div>
          </a>
        );
      })}
    </div>

    {posts.length === 0 && (
      <p class="text-white/60">Chưa có bài viết nào.</p>
    )}
  </main>
</BaseLayout>
